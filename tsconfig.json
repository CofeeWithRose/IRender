{
  "compilerOptions": {
    "jsx": "preserve",
    "moduleResolution": "Node",
    "rootDir": ".",
    "lib": ["ESNext", "DOM"],
    "module": "ES6",
    "target": "ES5",
    "outDir": "lib",
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "strictNullChecks": true,
    "paths": { 
      "i-render": [ "./src/index.ts" ],
    }
  },
  "exclude": ["lib", "node-modules"],
  // "include": [
  //   "**/*.ts",  "**/*.tsx",
  // ],
}